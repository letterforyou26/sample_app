<% provide :title, t(".home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>
      <%= t ".sample_app" %>
    </h1>
    <h2>
      <%= t ".intro_1" %>
      <%= link_to t(".name_tutorial"), Settings.rails_home_link %>
      <%= t ".intro_2" %>
    </h2>
    <%= link_to t(".sign_up_now"), new_user_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag(Settings.rails_image_path), Settings.rails_web_link %>
<% end %>
